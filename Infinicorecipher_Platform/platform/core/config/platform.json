  "services": {
    "gateway": {
      "port": 8000,
      "host": "localhost"
    },
    "auth": {
      "port": 8001,
      "host": "localhost"
    },
    "user": {
      "port": 8002,
      "host": "localhost"
    },
    "analytics": {
      "port": 8003,
      "host": "localhost"
    },
    "education": {
      "port": 8004,
      "host": "localhost"
    },
    "content": {
      "port": 8005,
      "host": "localhost"
    },
    "notification": {
      "port": 8006,
      "host": "localhost"
    },
    "assessment": {
      "port": 8007,
      "host": "localhost"
    }
  },
  "applications": {
    "galacticCode": {
      "web": {
        "port": 3000,
        "host": "localhost"
      },
      "backend": {
        "port": 5000,
        "host": "localhost"
      }
    }
  },
  "infrastructure": {
